<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>
<div class="productos">
    <% if(productos.length>0) { %>
    <ul class="lista-productos">        
        <% for(let producto = 0; producto < productos.length; producto++){ %> 
            
        <li class="lista-productos--item">
            
        <div class="lista-productos--header">
            <input readonly value="<%= productos[producto].nombre %>" name="nombre" class='lista-item--titulo'>

            <form action="/tienda/admin/eliminar" method="post" class="lista-productos--form-eliminar">
                <input type="text" name="id" hidden value="<%= productos[producto]._id %>">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
                            <button type="submit" class="formulario-item--btn--eliminar">X</button>
            </form>
            
        </div>
            <img src="<%= productos[producto].imagen%>"
                alt="libro" class="list-item--img">
                <b><%= productos[producto].descripcion %></b>
                <hr>
                <b>Disponibles <%= productos[producto].disponibles %> </b>
                <hr>
                <b>Precio <%= productos[producto].precio %> </b>
            <a class="lista-item--btnn" href ="/tienda/admin/producto/editar/<%=productos[producto].id%>?editar=true">Editar</a>
        
        </li>
        
        <% }  %>
    </ul>
        <% } else {%>
            
        <h1>No hay productos en el la tienda</h1>
        
        <% }  %>
    
</div>
<%- include('includes/end.ejs') %>